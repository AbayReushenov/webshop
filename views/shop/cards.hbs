{{# each products }}
<div class="row">
  {{# each this }}
  <div class="col-sm-6 col-md-4 border border-info">
    <div class="thumbnail">
      <img src="{{this.imgPath}}" alt="..." class="img-responsive">
      <div class="caption">
        <h3>{{this.title}}</h3>
        <p>atr. {{this.art}}</p>
        <p class="description">{{this.description}}</p>
        <div class="clearfix">
          <div class="price pull-left">$ {{this.price}}</div>
 {{!--          <button type="button" id="this._id" class="btn btn-info btnadd">Add to Cart</button> --}}
          <a href="/shop/{{this._id}}" class="btn btn-success pull-right" role="button">Add to shoping Cart</a>
          <br>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>
{{/each}}
